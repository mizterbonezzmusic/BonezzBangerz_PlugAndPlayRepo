# Bonezz Bangerz - server.cfg.example
# Copy/rename to server.cfg in your server-data and edit license key + DB string.

## NETWORK / LISTING
endpoint_add_tcp "0.0.0.0:30120"
endpoint_add_udp "0.0.0.0:30120"
sv_maxclients 10
sv_licenseKey "REPLACE_WITH_YOUR_KEY"

sv_hostname "Bonezz Bangerz"
sets sv_projectName "Bonezz Bangerz"
sets sv_projectDesc "QBCore + Bonezz minimal UC bundle"
sets locale "en-US"
sv_enforceGameBuild 3095
set resources_useSystemChat true
sets tags "qbcore,bonezz,uc,condensed"

## DATABASE
# ensure oxmysql
# set mysql_connection_string "mysql://user:pass@127.0.0.1/database?charset=utf8mb4"

## BASE / CORE
ensure mapmanager
ensure chat
ensure spawnmanager
ensure sessionmanager
ensure basic-gamemode
ensure hardcap
ensure baseevents

## STANDALONE / LIBS
# ensure pma-voice
ensure [standalone]
ensure [defaultmaps]

## QBCORE STACK (usually provided by your recipe)
# ensure oxmysql
# ensure qb-core
# ensure qb-target
# ensure qb-inventory
# ensure [qb]

## BONEZZ (condensed UC feature set)
ensure bonezz_min

## BONEZZ Rx Items Loader
ensure bonezz_rx_loader
# (optional) ensure Bonezz_Rx_AllInOne_v3

## PERMISSIONS / ADMIN
add_ace group.admin command allow

## === BONEZZ GOD (ACE) ===
add_ace qbcore.god command allow
add_principal qbcore.god group.admin
add_principal qbcore.god qbcore.admin
add_principal qbcore.admin qbcore.mod

# Bonezz IDs
add_principal identifier.license:4576f02ddb6efa62a43154edd9367dec6e5271d1 qbcore.god
